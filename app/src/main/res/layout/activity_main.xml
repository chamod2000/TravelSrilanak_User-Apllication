<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testingActivity"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:background="#2E592F"
            app:titleTextColor="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_menu_24"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="415dp"
                android:layout_height="577dp"
                android:layout_marginBottom="107dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="4"
                app:sliderStartAutoCycle="true" >


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="231dp"
                    android:layout_marginEnd="185dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/alata"
                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="302dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="70dp"
                    android:fontFamily="@font/alata"
                    android:gravity="left"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="233dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="70dp"
                    android:fontFamily="@font/alata"
                    android:gravity="left"
                    android:text="LOCAL TIME"
                    android:textColor="@color/white"
                    android:textSize="15dp" />




                <TextView
                    android:id="@+id/cityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="30sp"
                    android:text=""
                    android:gravity="center"
                    android:fontFamily="@font/alata"
                    android:textColor="#FF9800"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView17"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="30sp"
                    android:text="SRI LANKA"
                    android:gravity="center"
                    android:fontFamily="@font/alata"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    >

                </TextView>




                <TextView
                    android:id="@+id/weatherCondition"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="510dp"
                    android:paddingStart="30sp"
                    android:text="-----"
                    android:gravity="end"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/alata"
                    android:textSize="15sp"
                    android:layout_marginLeft="196dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>


            </com.smarteist.autoimageslider.SliderView>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="205dp"
                android:layout_marginTop="435dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/alata"
                android:gravity="end"
                android:text="TODAY"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageSlider"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/alata"
                android:gravity="end"
                android:paddingStart="30dp"
                android:text="0*C"
                android:textColor="#FF0000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginTop="-113dp"
            android:background="@drawable/start_travel"
            android:text="Start Travel"
            android:fontFamily="@font/alata"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<!--        <Button-->
<!--            android:id="@+id/button4"-->
<!--            android:layout_marginTop="200dp"-->
<!--            android:gravity="bottom"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Button" />-->






    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_layout_header"
        app:menu="@menu/side_nav_menu"
        app:itemIconTint="@drawable/customicon"
        app:itemTextColor="#716C6C"
        app:itemIconSize="25dp"
        />

</androidx.drawerlayout.widget.DrawerLayout>

